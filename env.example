# Database
# For Supabase PostgreSQL
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"
# For local development (SQLite)
# DATABASE_URL="file:./dev.db"

# NextAuth - Use strong secret in production
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secure-secret-key-here-change-in-production"

# Twilio SMS Configuration (for OTP sending)
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"
# Note: If Twilio credentials are not set, OTP will be logged to console only (development mode)

# Admin credentials (CHANGE THESE IN PRODUCTION)
ADMIN_EMAIL="admin@kms-election.com"
ADMIN_PASSWORD="SecureAdmin123!"
ADMIN_PHONE="+1234567890"

# Security settings
JWT_SECRET="your-super-secure-jwt-secret-key-change-in-production"
CSRF_SECRET="your-super-secure-csrf-secret-key-change-in-production"
BCRYPT_ROUNDS=12

# File upload settings
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="image/jpeg,image/png,application/pdf"
UPLOAD_DIR="./uploads"

# Storj DCS Configuration (REQUIRED - Primary storage)
STORJ_ACCESS_KEY_ID="your-storj-access-key-id"
STORJ_SECRET_ACCESS_KEY="your-storj-secret-access-key"
STORJ_ENDPOINT="https://gateway.storjshare.io"
STORJ_REGION="global"
STORJ_BUCKET_NAME="kms-election-files"

# Cloudinary Configuration (Optional - for legacy file viewing)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Email Configuration (Gmail SMTP)
GMAIL_USER="your-email@gmail.com"
GMAIL_APP_PASSWORD="your-gmail-app-password"
# Get Gmail App Password: https://myaccount.google.com/apppasswords
# 1. Enable 2-Step Verification on your Google Account
# 2. Go to App Passwords: https://myaccount.google.com/apppasswords
# 3. Generate App Password for "Mail" application
# 4. Copy the 16-character password (remove spaces)
# 5. Use the App Password (NOT your regular Gmail password)